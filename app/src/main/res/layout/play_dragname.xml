<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_height"
        android:gravity="center"
        android:textSize="@dimen/play_question"
        android:textColor="@android:color/white"
        android:background="@color/colorNatural"
        android:padding="@dimen/md_keylines_x3"
        tools:text="Drag and drop the text"/>

    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_keylines_x9"
        android:layout_marginTop="@dimen/md_keylines_x12"
        android:layout_marginLeft="@dimen/md_keylines_x6"
        android:layout_marginRight="@dimen/md_keylines_x6"
        android:padding="@dimen/md_keylines"
        android:background="@drawable/layout_border3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/play_option"
            android:textColor="@android:color/black"
            android:visibility="visible"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/play_option"
            android:textColor="@android:color/black"
            android:visibility="visible"
            tools:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/play_option"
            android:textColor="@android:color/black"
            android:visibility="visible"
            tools:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imagesLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/md_keylines_x6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/md_keylines_x3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/play_image"
                android:layout_height="@dimen/image_margin"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_dog" />

            <LinearLayout
                android:id="@+id/answerLayout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_keylines_x9"
                android:layout_marginTop="@dimen/md_keylines_x8"
                android:layout_marginStart="@dimen/md_keylines_x3"
                android:gravity="center"
                android:padding="@dimen/md_keylines"
                android:background="@drawable/layout_border3"
                android:orientation="horizontal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/md_keylines_x3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/play_image"
                android:layout_height="@dimen/image_margin"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_dog" />

            <LinearLayout
                android:id="@+id/answerLayout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_keylines_x9"
                android:layout_marginTop="@dimen/md_keylines_x8"
                android:layout_marginStart="@dimen/md_keylines_x3"
                android:gravity="center"
                android:padding="@dimen/md_keylines"
                android:background="@drawable/layout_border3"
                android:orientation="horizontal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/play_image"
                android:layout_height="@dimen/image_margin"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_dog" />

            <LinearLayout
                android:id="@+id/answerLayout3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_keylines_x9"
                android:layout_marginTop="@dimen/md_keylines_x8"
                android:layout_marginStart="@dimen/md_keylines_x3"
                android:gravity="center"
                android:padding="@dimen/md_keylines"
                android:background="@drawable/layout_border3"
                android:orientation="horizontal" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>