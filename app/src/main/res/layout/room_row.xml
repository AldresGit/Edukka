<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/md_keylines_x2"
    android:layout_marginLeft="@dimen/md_keylines_x2"
    android:layout_marginRight="@dimen/md_keylines_x2"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/md_keylines_x2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/md_keylines_x2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/room_id"
            android:textSize="@dimen/article_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            tools:text="@string/gametitle"/>

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorSecondaryText"
            tools:text="@string/lorem_ipsum"/>

        <TextView
            android:id="@+id/user_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorSecondaryText"
            tools:text="@string/lorem_ipsum"/>


    </LinearLayout>
</android.support.v7.widget.CardView>