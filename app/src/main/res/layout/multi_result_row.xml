<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines_x3"
    android:layout_marginEnd="@dimen/md_keylines_x2"
    android:layout_marginStart="@dimen/md_keylines_x2"
    app:cardElevation="@dimen/helpcard_elevation"
    app:cardCornerRadius="@dimen/md_keylines_x2"
    android:foreground="?attr/selectableItemBackground">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/md_keylines_x2"
            android:layout_marginStart="@dimen/md_keylines_x2"
            android:src="@drawable/avatar_dog" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/md_keylines_x4"
            android:ems="7"
            android:textSize="16sp"
            android:text="Alberto RodrÃ­guez"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|fill_horizontal"
            android:layout_marginEnd="@dimen/md_keylines_x2"
            android:gravity="right"
            android:text="+20"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/medal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/md_keylines_x2"
            android:layout_marginEnd="@dimen/md_keylines_x2"
            tools:src="@drawable/medal_first"/>

    </GridLayout>

</android.support.v7.widget.CardView>